@inject IGeneralHttpServices GeneralHttpServices
@namespace Website.BlazorApp.Pages.Dashboard.ManageContactMessages.Components

<div class="modal fade show" id="detailsModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Title</h4>
                <button type="button" class="close"
                        @onclick="async () => await OnCloseDialog.InvokeAsync()">&times;</button>
            </div>
            <div class="modal-body">
                <strong>@Message?.Title</strong>
                <br/>
                <p>
                    @Message?.Content
                </p>
                <p>
                    <strong>Email</strong>: @Message?.Email
                    <br/>
                    <strong>Phone Number</strong>: @Message?.PhoneNumber
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="async () => await OnCloseDialog.InvokeAsync()">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public MessageViewModel? Message { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public EventCallback OnApiError { get; set; }
    [Parameter] public EventCallback OnException { get; set; }
    [Parameter] public EventCallback OnCloseDialog { get; set; }
}